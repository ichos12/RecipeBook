@{
    ViewData["Title"] = "Login";
}
@model RecipeBook.Models.LoginModel

<h2>Вход</h2>
<form asp-action="Login" asp-controller="Authorization" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Введите Email</label>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="control-group">
            <div class="controls">
                <label asp-for="IsRemember">
                    <input asp-for="IsRemember"/>
                    <label>Запомнить меня</label><br />
                </label>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <input type="submit" value="Войти" class="btn btn-primary" />
            </div>
        </div>
</form>
